{
  "manifest_version": 2,

  "name": "ROBLOX ID Helper",
  "description": "Easily copy ids of ROBLOX assets and find decal image ids.",
  "version": "1.0.2",

  "background": {
    "scripts": ["context.js"],
    "persistant": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "*://www.roblox.com/*item*",
    "*://api.roblox.com/*",
    "alarms",
    "tabs",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead"
  ]
}
